<div class="bg bg-signup">
  <div class="module">
    <ul>
      <li class="tab activeTab"><img src="https://i.imgur.com/Fk1Urva.png" alt="" class="icon"/></li>
      <li class="tab "><img src="https://i.imgur.com/Fk1Urva.png" alt="" class="icon"/></li>
      <li class="tab"><img src="https://i.imgur.com/Fk1Urva.png" alt="" class="icon"/></li>
      <li class="tab"><img src="https://i.imgur.com/Fk1Urva.png" alt="" class="icon"/></li>
    </ul>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <div class="form">
      <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'shared/error_messages'%>
        <%= f.label :fullName, "Full Names"%>
        <%= f.text_field :fullName , class: "textbox form-control" %>
        <%= f.label :photo, "User image" %>
        <%= f.file_field :photo, class: "textbox form-control" %>
        <%= f.label :coverimage, "Cover image" %>
        <%= f.file_field :coverimage, class: "textbox form-control"%>
        <%= f.label :username%>
        <%= f.text_field :username , class: "textbox form-control" %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "textbox form-control" %>
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation , class: "textbox form-control"%>
        <%= f.submit "Create my account", class: "r-button" %>
      <% end %>
      <p>Aready have an account? <%= link_to "Login!", login_path %></p>
    </div>
  </div>
</div>

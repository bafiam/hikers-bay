  <div class="form">
  <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <%= form_for(:session, url: login_path) do |f| %>
   

      <%= f.label :username %>
      <%= f.text_field :username, class: 'textbox form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'textbox form-control' %>

      <%= f.submit "Log in", class: "r-button" %>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
